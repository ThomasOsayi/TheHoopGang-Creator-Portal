rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Video uploads for volume submissions
    match /videos/{creatorId}/{fileName} {
      // Allow read if authenticated (for admins and the creator themselves)
      allow read: if request.auth != null;
      
      // Allow write if:
      // 1. User is authenticated
      // 2. File size is under 100MB
      // 3. Content type is video/*
      allow write: if request.auth != null
                   && request.resource.size < 100 * 1024 * 1024
                   && request.resource.contentType.matches('video/.*');
      
      // Allow delete if authenticated (for cleanup)
      allow delete: if request.auth != null;
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}